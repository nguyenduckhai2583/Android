<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="7dp"

    >

    <RelativeLayout
        android:id="@+id/container"
        android:background="@drawable/corner_cdv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/dayname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Monday"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="#FFFFFF"
            android:layout_below="@id/dayname"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/morning_name_course_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayname"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/book"
            android:drawablePadding="5dp"
            android:fontFamily="monospace"
            android:text="Xử lý THS"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/morning_time_course_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7-10h"
            android:layout_below="@id/morning_name_course_item"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"/>
        <View
            android:id="@+id/barrier"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:layout_below="@id/dayname"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/afternoon_name_course_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayname"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/book"
            android:layout_toRightOf="@id/barrier"
            android:layout_marginLeft="12dp"
            android:drawablePadding="5dp"
            android:fontFamily="monospace"
            android:text="Xử lý THS"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/afternoon_time_course_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7-10h"
            android:layout_below="@id/morning_name_course_item"
            android:drawableLeft="@drawable/time"
            android:layout_toRightOf="@id/barrier"
            android:layout_marginLeft="12dp"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"/>





    </RelativeLayout>



</androidx.cardview.widget.CardView>