<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="80dp"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cdv"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:padding="4dp"
            android:background="@drawable/bg_stu_info"
            android:layout_width="match_parent"
            android:id="@+id/container_stu"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/student_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Đức Khải"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/while_color"
                android:textSize="16dp"
                android:transitionName="name_Trans"
                android:fontFamily="monospace"/>
            <TextView
                android:id="@+id/student_phonenum_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0774378865"
                android:textColor="@color/while_color"
                android:layout_below="@id/student_name_item"
                android:layout_marginLeft="32dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="4dp"
                android:transitionName="phonenum_Trans"
                android:fontFamily="monospace"/>
            <TextView
                android:id="@+id/student_mssv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123160050"
                android:layout_below="@id/student_phonenum_item"
                android:layout_marginLeft="32dp"
                android:drawableLeft="@drawable/ic_id"
                android:textColor="@color/while_color"
                android:fontFamily="monospace"
                android:transitionName="mssv_Trans"
                android:drawablePadding="4dp"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_face_item"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/khai"
        android:elevation="12dp"
        android:transitionName="img_Trans"
        android:layout_centerVertical="true"/>





</RelativeLayout>